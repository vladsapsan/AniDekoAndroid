<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ProfileFragmentConteiner"
    android:clickable="true"
    android:background="@color/MainBlack"
    tools:context=".ui.profile.ProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/BackToButton"
            android:layout_width="wrap_content"
            app:tint="@color/MainWhite"
            android:layout_gravity="left|top"
            android:layout_marginLeft="20dp"
            app:rippleColor="@color/MainWhiteTransparent"
            android:layout_marginTop="30dp"
            style="?attr/floatingActionButtonSmallStyle"
            android:backgroundTint="@color/MainBlack"
            app:srcCompat="@drawable/navigate_before24px"
            android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/MenuButton"
            android:layout_width="wrap_content"
            app:tint="@color/MainWhite"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"
            app:rippleColor="@color/MainWhiteTransparent"
            android:layout_marginTop="30dp"
            style="?attr/floatingActionButtonSmallStyle"
            android:backgroundTint="@color/MainBlack"
            app:srcCompat="@drawable/menu24px"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/MainWhite"
                    android:layout_height="145dp">
                    <ImageView
                        android:background="@color/MainWhite"
                        android:id="@+id/SeconsPhotoProfile"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/progressBarCoverPhoto"
                        style="?android:attr/progressBarStyle"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/MainBlue"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="115dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/SubscribeButton"
                            android:clickable="true"
                            android:visibility="visible"
                            app:rippleColor="@color/MainWhiteTransparent"
                            android:layout_width="30dp"
                            android:layout_gravity="left|bottom"
                            app:strokeWidth="0dp"
                            app:cardElevation="8dp"
                            android:layout_marginLeft="80dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/MainBlue"
                            android:layout_height="30dp">
                            <ProgressBar
                                android:visibility="gone"
                                android:id="@+id/progressBarSubscribe"
                                style="?android:attr/progressBarStyle"
                                android:layout_gravity="center"
                                android:indeterminateTint="@color/MainWhiteTransparent"
                                android:layout_width="22dp"
                                android:layout_height="22dp" />
                            <LinearLayout
                                android:id="@+id/SubscribeIcon"
                                android:visibility="visible"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:foreground="@drawable/person_add24px"
                                    android:foregroundTint="@color/MainWhite"
                                    android:layout_height="18dp"/>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/UnSubscribeButton"
                            android:visibility="gone"
                            android:clickable="true"
                            app:rippleColor="@color/MainWhiteTransparent"
                            android:layout_width="wrap_content"
                            android:layout_gravity="left|bottom"
                            app:strokeWidth="0dp"
                            app:cardElevation="8dp"
                            android:layout_marginLeft="80dp"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/MainWhiteTransparent"
                            android:layout_height="30dp">
                            <LinearLayout
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:foreground="@drawable/person_check24px"
                                    android:foregroundTint="@color/MainBlue"
                                    android:layout_height="18dp"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            app:strokeWidth="0dp"
                            app:strokeColor="@color/MainWhite"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="5dp"
                            android:layout_height="100dp">
                            <ImageView
                                android:id="@+id/PhotoProfile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@color/MainWhite"
                                android:scaleType="centerCrop"/>
                            <ProgressBar
                                android:visibility="gone"
                                android:id="@+id/progressBarProfile"
                                style="?android:attr/progressBarStyle"
                                android:layout_gravity="center"
                                android:indeterminateTint="@color/MainBlue"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/CardProfileNameInfo"
                        android:clickable="true"
                        app:rippleColor="@color/MainWhiteTransparent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="34dp"
                        android:layout_marginRight="8dp"
                        app:strokeWidth="0dp"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/MainBlack"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/UserNameTextView"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semi_bold"
                                    android:textColor="@color/MainWhite"
                                    android:text=""/>
                                <ImageView
                                    android:id="@+id/IsverifiedIcon"
                                    android:visibility="gone"
                                    android:layout_marginLeft="1dp"
                                    android:layout_gravity="center"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/verified24px"/>
                                <ImageView
                                    android:layout_marginLeft="8dp"
                                    android:layout_gravity="center"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/info24px"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/UserStatusTextView"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textSize="12dp"
                                android:layout_marginTop="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/MainWhite"
                                android:text=""/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_height="wrap_content">


                    <FrameLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/RateButton"
                                android:layout_width="wrap_content"
                                app:tint="@color/LightYellow"
                                android:layout_marginBottom="5dp"
                                app:rippleColor="@color/MainWhiteTransparent"
                                style="?attr/floatingActionButtonSmallStyle"
                                android:backgroundTint="@color/MainBlack"
                                app:srcCompat="@drawable/bolt24px"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    app:strokeWidth="0dp"
                                    app:cardCornerRadius="4dp"
                                    app:cardBackgroundColor="@color/MainBlue"
                                    android:layout_height="25dp">
                                    <TextView
                                        android:id="@+id/UserCommentsNumber"
                                        android:textSize="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="9dp"
                                        android:layout_marginRight="9dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semi_bold"
                                        android:textColor="@color/MainWhite"
                                        android:text="0"/>
                                </com.google.android.material.card.MaterialCardView>
                                <TextView
                                    android:textSize="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/MainWhite"
                                    android:text="Комментарии"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    app:strokeWidth="0dp"
                                    app:cardCornerRadius="4dp"
                                    app:cardBackgroundColor="@color/MainBlue"
                                    android:layout_height="25dp">
                                    <TextView
                                        android:id="@+id/UserSubsNumber"
                                        android:textSize="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="9dp"
                                        android:layout_marginRight="9dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semi_bold"
                                        android:textColor="@color/MainWhite"
                                        android:text="0"/>
                                </com.google.android.material.card.MaterialCardView>
                                <TextView
                                    android:textSize="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/MainWhite"
                                    android:text="Подписки"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="16dp"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    app:strokeWidth="0dp"
                                    app:cardCornerRadius="4dp"
                                    app:cardBackgroundColor="@color/MainBlue"
                                    android:layout_height="25dp">
                                    <TextView
                                        android:id="@+id/UserYourSubsNumber"
                                        android:textSize="12dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="9dp"
                                        android:layout_marginRight="9dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_semi_bold"
                                        android:textColor="@color/MainWhite"
                                        android:text="0"/>
                                </com.google.android.material.card.MaterialCardView>
                                <TextView
                                    android:textSize="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:textColor="@color/MainWhite"
                                    android:text="Подписчики"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>