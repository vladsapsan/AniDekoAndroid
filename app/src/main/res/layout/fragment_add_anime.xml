<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/MainBlack"
    tools:context=".ui.Anime.AddAnimeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/NameEditText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Название аниме" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/AboutdxitText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Описание" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/DateEditText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Дата" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/AuthorEditText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Автор" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/CountryEditText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Страна" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_gravity="center"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/MainBlue"
            app:hintTextColor="@color/text_box_selector"
            app:endIconMode="clear_text"
            android:textColorHint="@color/MainWhite">
            <EditText
                android:id="@+id/StudioEditText"
                android:textSize="13dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Студия" />
        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/AddAnime"
            android:backgroundTint="@color/MainWhite"
            app:icon="@drawable/menu24px"
            app:iconTint="@color/MainBlack"
            android:textColor="@color/MainBlack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:textSize="14dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:text="Добавить аниме"/>
    </LinearLayout>
</ScrollView>


</FrameLayout>