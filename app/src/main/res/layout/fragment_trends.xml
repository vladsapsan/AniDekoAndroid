<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/MainBlack"
    tools:context=".ui.trends.TrendsFragment">


    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Данный раздел находится в доработке"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/MainWhite"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ожидайте в скором будущем топы рейтинга и качественные системы"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/SupportGrayText"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center_horizontal" />
    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/animationFireView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/animation_work"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</FrameLayout>