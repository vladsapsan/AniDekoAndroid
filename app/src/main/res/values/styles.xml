<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModalBottomSheet" parent="Theme.Material3.Light.BottomSheetDialog">
        <!-- Apply attributes here -->
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    //Стиль всего приложения тобишь главного менй активити
    <style name="Theme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/MainBlack</item>
        <item name="bottomAppBarStyle">@color/MainBlack</item>

        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>

        //Верхнее statusbar
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        //цвет нижнего системного навигационного меню
        <item name="android:navigationBarColor">@color/MainBlack</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>


    <style name="BlurNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:windowBackgroundBlurRadius">30dp</item>
        <item name="android:windowBlurBehindEnabled">true</item>
        <item name="android:windowBlurBehindRadius">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:autoSizeStepGranularity">@dimen/activity_vertical_margin</item>
    </style>
    //Стиль нижнего навигационного меню
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/MainBlueTransparent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
</resources>